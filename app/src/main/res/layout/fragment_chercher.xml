<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cm.mindef.sed.sicre.mobile.fragments.ChercherFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="20dp"
            android:paddingBottom="100dp">

            <Button android:id="@+id/btn_chercher_individu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/btn_chercher_individu"
                android:background="@drawable/background_button"
                android:layout_marginTop="40dp"
                android:textColor="@android:color/white"
                android:textAlignment="center" />

            <Button android:id="@+id/btn_chercher_vehicule"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/btn_chercher_vehicule"
                android:background="@drawable/background_button"
                android:layout_marginTop="40dp"
                android:textColor="@android:color/white"
                android:textAlignment="center" />

            <Button android:id="@+id/btn_chercher_objet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/btn_chercher_objet"
                android:background="@drawable/background_button"
                android:layout_marginTop="40dp"
                android:textColor="@android:color/white"
                android:textAlignment="center" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>