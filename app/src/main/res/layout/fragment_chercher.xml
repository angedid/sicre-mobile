<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cm.mindef.sed.sicre.mobile.fragments.ChercherFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="50dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="60dp"
            android:layout_margin="20dp"
            android:paddingBottom="100dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/networState_logger"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="5dp"
                />

            <Button android:id="@+id/btn_chercher_individu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/btn_chercher_individu"
                android:background="@drawable/background_button_white"
                android:layout_marginTop="40dp"
                android:textColor="@color/colorPrimaryDark"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:drawableLeft="@drawable/icon_recherche_individu"/>

            <Button android:id="@+id/btn_chercher_vehicule"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/btn_chercher_vehicule"
                android:background="@drawable/background_button_white"
                android:layout_marginTop="40dp"
                android:textColor="@color/colorPrimaryDark"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:drawableLeft="@drawable/icon_recherche_vehicule"/>

            <Button android:id="@+id/btn_chercher_objet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/btn_chercher_objet"
                android:background="@drawable/background_button_white"
                android:layout_marginTop="40dp"
                android:textColor="@color/colorPrimaryDark"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:drawableLeft="@drawable/icon_recherche_objet"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>