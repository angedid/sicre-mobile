<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cm.mindef.sed.sicre.mobile.fragments.VideoFragment"
    android:paddingBottom="75dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/header">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="90"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/affaire"
            android:textSize="14sp"
            android:text="@string/liste_perquisition_title"
            android:textStyle="bold"
            android:layout_alignParentLeft="true" />
        <Button android:id="@+id/add_preuve_video"
            android:layout_marginTop="3dp"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_weight="10"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:text="@string/add_text_prouf"
            android:paddingBottom="0dp"
            android:paddingTop="0dp"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:textSize="10sp"
            android:background="@drawable/background_button"
            android:textColor="@android:color/white"
            android:textAlignment="center" />

    </LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/video_list_view"
        android:layout_below="@id/header"
        android:divider="@android:color/white"
        android:dividerHeight="3dp"
        />


</RelativeLayout>
